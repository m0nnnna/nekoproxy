# Controller Environment Variables
# Copy this to /opt/nekoproxy/.env and modify as needed

# Controller Settings
NEKO_HOST=0.0.0.0
NEKO_PORT=8000
NEKO_DEBUG=false
NEKO_DATABASE_URL=sqlite:////var/lib/nekoproxy/controller.db

# Agent timeout settings
NEKO_HEARTBEAT_INTERVAL=30
NEKO_HEARTBEAT_TIMEOUT=90

# Stats cleanup
NEKO_STATS_RETENTION_DAYS=30


# Agent Environment Variables
# Use these on agent nodes

# Agent identification
NEKO_AGENT_HOSTNAME=nekoproxy-node-1
NEKO_AGENT_WIREGUARD_IP=10.0.0.2
NEKO_AGENT_PUBLIC_IP=203.0.113.10

# Controller connection
NEKO_AGENT_CONTROLLER_URL=http://10.0.0.1:8000

# Network settings
NEKO_AGENT_LISTEN_IP=0.0.0.0
NEKO_AGENT_BUFFER_SIZE=8192
NEKO_AGENT_CONNECTION_TIMEOUT=10

# Heartbeat and stats
NEKO_AGENT_HEARTBEAT_INTERVAL=30
NEKO_AGENT_STATS_BATCH_SIZE=100
NEKO_AGENT_STATS_REPORT_INTERVAL=60
